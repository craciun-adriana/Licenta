<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LicentaUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <div class="toolbar">
            <div class="buttons">
                <span id="title">Licenta</span>
                <div class="menu-container">
                    <a class="menu" asp-page="/Login">Login</a>
                    <a class="menu" asp-page="/Profil">Profile</a>
                    <a class="menu" asp-page="/Friends">Friends</a>
                    <a class="menu" asp-page="/Chat">Chat</a>
                    <a class="menu" asp-page="/Books">Books</a>
                    <a class="menu" asp-page="/Films">Films</a>
                    <a class="menu" asp-page="/Serieses">Series</a>
                    <a class="menu" asp-page="/Settings">Settings</a>
                    <a class="menu" asp-page="/Login">Logout</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>