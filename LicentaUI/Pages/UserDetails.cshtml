@page

@section Style {
    <link rel="stylesheet" href="~/css/UserDetails.css" />
}

@model LicentaUI.Pages.UserDetailsModel
@{
}

<h1>UserName Profile</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].ProfilePicture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Rank)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfilePicture)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>